<!DOCTYPE html>
	<meta charset="utf-8">
	<head><% include partials/head.ejs %></head>
	<body>
  	<div class="container">
      <% include partials/header.ejs %>
      <main class="right-column">
        <section class="single-resource-container">
        <h2> JavaScript Canon <%= typeTitle %></h2>
        <% types.forEach(function(item) { %>

          <article id="<%= item.id %>" class="single-resource" data-resource-type="<%= item.type %>">

            <h2 class="single-resource__header">
              <%= item.title %><span class="single-resource__author"> &nbsp;by <%= item.author %></span>
            </h2>

            <img src="/img/book-images/<%= item.image %>" class="single-resource__book-image">

            <a class="single-resource__button js-book" href="<%= item.link %>">Get This!</a>

            <a class="single-resource__button js-modal" data-resource-number="<%= item.id %>" href="/<%= item.href %>">Why it's good?</a>

          </article>
        <% }); %>
        </section> <!-- .page-modal__container -->
      </main> <!-- .right-column -->
      <% include partials/footer.ejs %>
      <% include partials/scripts.ejs %>
    </div> <!-- .container -->
  </body>
</html>