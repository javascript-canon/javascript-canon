{
  "name": "javascript-canon",
  "version": "1.0.0",
  "description": "a presentation of the most important learning JavaScript resources",
  "main": "app/app.js",
  "scripts": {
    "server": "nodemon -e scss,pug,js,json --watch app && npm run build-pug && npm run build-js && npm run css-build",
    "build-pug": "pug app/views/index.pug -o build/",
    "build-js": "browserify js-build/*.js | uglifyjs -mc > app/public/js/scripts.js",
    "build-sass": "node-sass css-build/style.scss css-build/style.css",
    "concat-css": "cat css-build/*.css > build/css/style.css",
    "uncss": "npm run build-pug && grunt",
    "clean-css": "cleancss build/css/style.css -o app/public/css/style.css",
    "css-build": "npm run build-sass && npm run concat-css && npm run uncss && npm run clean-css",
    "build": "npm run build-pug && npm run css-build && npm run build-js",
    "watch-pug": "nodemon -e pug -w pug -x 'npm run build-pug'",
    "watch-js": "nodemon -e js -w js-build -x 'npm run build-js'",
    "watch-css": "nodemon -e scss -w css-build -w css-build/imports -x 'npm run css-build'",
    "start": "npm run server & npm run watch-pug & npm run watch-js & npm run watch-css",
    "image-minify": "imagemin image-min/* --out-dir=app/img/",
    "book-minify": "imagemin image-min/book-images/* --out-dir=app/img/book-images/",
    "copy-normalize": "ncp node_modules/normalize.css/normalize.css css-build/normalize.css"
  },
  "author": "kaidez",
  "license": "ISC",
  "devDependencies": {
    "browserify": "^13.1.1",
    "clean-css": "^3.4.20",
    "grunt": "^1.0.1",
    "grunt-cli": "^1.2.0",
    "grunt-uncss": "^0.6.1",
    "jquery": "^3.1.1",
    "ncp": "^2.0.0",
    "node-sass": "^3.12.2",
    "nodemon": "1.11.0",
    "uglifyjs": "^2.4.10",
    "uncss": "0.14.1"
  },
  "dependencies": {
    "ejs": "^2.5.2",
    "express": "^4.14.0",
    "jquery": "^3.1.0",
    "normalize.css": "^5.0.0",
    "pug": "^2.0.0-beta6",
    "reload": "^1.1.0",
    "underscore": "^1.8.3"
  }
}
