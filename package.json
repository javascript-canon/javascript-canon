{
  "name": "javascript-canon",
  "version": "1.0.0",
  "description": "a presentation of the most important learning JavaScript resources",
  "author": "Kai 'kaidez' Gittens",
  "license": "ISC",
  "main": "app.js",
  "files": [
    "app.js",
    "models",
    "public",
    "routes",
    "views",
    "vanilla-js-mvc"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kaidez/javascript-canon"
  },
  "engines": {
    "node": ">=5"
  },
  "sasslintConfig": ".sass-lint.yml",
  "scripts": {
    "server": "nodemon -e scss,ejs,js,css --watch app",
    "jshint": "jshint js-build/*.js --show-non-errors || true",
    "browserify": "browserify js-build/*.js | uglifyjs -mc > public/js/scripts-home.js",
    "build-js": "npm run browserify && npm run jshint",
    "build-sass": "node-sass css-build/style-home.scss css-build/style-home.css",
    "concat-css": "cat css-build/*.css > public/css/style-home.css",
    "clean-css": "cleancss public/css/style-home.css --s0 -o public/css/style-home.css",
    "sass-lint": "sass-lint -c .sass-lint.yml 'css-build/**/*.scss' -v -q",
    "build-css": "npm run build-sass && npm run concat-css && npm run clean-css && npm run sass-lint",
    "watch-js": "nodemon -e js -w js-build -x 'npm run build-js'",
    "watch-css": "nodemon -e scss -w css-build -w css-build/imports -x 'npm run build-css'",
    "image-minify": "imagemin image-build/* --out-dir=public/img/",
    "copy-normalize": "ncp node_modules/normalize.css/normalize.css css-build/normalize.css css-build/normalize.css",
    "start": "npm run build-css && npm run build-js && npm run server & npm run watch-js & npm run watch-css"
  },
  "devDependencies": {
    "browserify": "^13.1.1",
    "clean-css": "^3.4.23",
    "jshint": "^2.9.4",
    "ncp": "^2.0.0",
    "node-sass": "^4.1.1",
    "nodemon": "1.11.0",
    "normalize.css": "^5.0.0",
    "sass-lint": "^1.10.2",
    "uglifyjs": "^2.4.10"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "ejs": "^2.5.5",
    "express": "^4.14.0",
    "http2": "^3.3.6",
    "jquery": "^3.1.1",
    "mongoose": "^4.7.6",
    "node-rest-client": "^2.0.1",
    "node-restful": "^0.2.5",
    "rsvp": "^3.3.3",
    "underscore": "^1.8.3"
  }
}
