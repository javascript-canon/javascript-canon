{
  "name": "javascript-canon",
  "version": "1.0.0",
  "description": "a presentation of the most important learning JavaScript resources",
  "author": "Kai 'kaidez' Gittens",
  "license": "ISC",
  "main": "app.js",
  "files": [
    "app.js",
    "public",
    "views",
    "vanilla-js-mvc"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kaidez/javascript-canon"
  },
  "scripts": {
    "server": "nodemon --delay 2000ms -e scss,ejs,js --watch $DIR",
    "server-home": "nodemon --delay 2000ms -e scss,ejs,js --watch",
    "build-js": "browserify $DIR/js-build/*.js | uglifyjs -mc > $DIR/public/js/scripts.js",
    "build-js-home": "uglifyjs js-build/scripts-home.js -mc > public/js/scripts-home.js",
    "build-sass": "node-sass $DIR/css-build/style.scss $DIR/css-build/style.css",
    "build-sass-home": "node-sass css-build/style-home.scss css-build/style-home.css",
    "concat-css": "cat $DIR/css-build/*.css > $DIR/public/css/style.css",
    "concat-css-home": "cat css-build/*.css > public/css/style-home.css",
    "clean-css": "cleancss $DIR/public/css/style.css --s0 -o $DIR/public/css/style.css",
    "clean-css-home": "cleancss public/css/style-home.css --s0 -o public/css/style-home.css",
    "build-css": "npm run build-sass && npm run concat-css && npm run clean-css",
    "build-css-home": "npm run build-sass-home && npm run concat-css-home && npm run clean-css-home",
    "build": "npm run build-css && npm run build-js",
    "watch-js": "nodemon -e js -w $DIR/js-build -x 'npm run build-js'",
    "watch-js-home": "nodemon -e js -w js-build -x 'npm run build-js-home'",
    "watch-css": "nodemon -e scss -w $DIR/css-build -w $DIR/css-build/imports -x 'npm run build-css'",
    "watch-css-home": "nodemon -e scss -w css-build -w css-build/imports -x 'npm run build-css-home'",
    "image-minify": "$DIR/imagemin image-build/* --out-dir=$DIR/public/img/",
    "image-minify-home": "imagemin image-build/* --out-dir=public/img/",
    "book-minify": "imagemin image-build/book-images/* --out-dir=$DIR/public/img/book-images/",
    "copy-normalize": "ncp node_modules/normalize.css/normalize.css $DIR/css-build/normalize.css",
    "copy-normalize-home": "ncp node_modules/normalize.css/normalize.css css-build/normalize.css css-build/normalize.css",
    "start": "npm run build-css && npm run build-js && npm run server & npm run watch-js & npm run watch-css",
    "start-home": "npm run server-home & npm run watch-js-home & npm run watch-css-home"
  },
  "devDependencies": {
    "browserify": "^13.1.1",
    "clean-css": "^3.4.21",
    "ncp": "^2.0.0",
    "node-sass": "^3.13.0",
    "nodemon": "1.11.0",
    "reload": "^1.1.0",
    "uglifyjs": "^2.4.10"
  },
  "dependencies": {
    "ejs": "^2.5.3",
    "express": "^4.14.0",
    "http2": "^3.3.6",
    "jquery": "^3.1.0",
    "normalize.css": "^5.0.0",
    "underscore": "^1.8.3"
  }
}
