{
  "name": "javascript-canon",
  "version": "1.0.0",
  "description": "a presentation of the most important learning JavaScript resources",
  "main": "app.js",
  "scripts": {
    "server": "nodemon -e scss,ejs,js --watch $DIR",
    "build-js": "browserify $DIR/js-build/*.js | uglifyjs -mc > $DIR/public/js/scripts.js",
    "build-sass": "node-sass $DIR/css-build/style.scss $DIR/css-build/style.css",
    "concat-css": "cat $DIR/css-build/*.css > $DIR/css-build/build-sandbox/css/style.css",
    "get-sandbox-file": "curl http://localhost:3000/$DIR --output $DIR/css-build/build-sandbox/index.html",
    "uncss": "grunt",
    "clean-css": "cleancss $DIR/css-build/build-sandbox/css/style.css --s0 -o $DIR/public/css/style.css",
    "build-css": "npm run build-sass && npm run concat-css && npm run uncss && npm run clean-css",
    "build": "npm run build-css && npm run build-js",
    "watch-js": "nodemon -e js -w $DIR/js-build -x 'npm run build-js'",
    "watch-css": "nodemon -e scss -w $DIR/css-build -w $DIR/css-build/imports -x 'npm run build-css'",
    "start": "npm run server & npm run watch-js & npm run watch-css",
    "image-minify": "imagemin $DIR/image-build/* --out-dir=$DIR/public/img/",
    "book-minify": "imagemin $DIR/image-build/book-images/* --out-dir=$DIR/public/img/book-images/",
    "copy-normalize": "ncp node_modules/normalize.css/normalize.css $DIR/css-build/normalize.css"
  },
  "author": "kaidez",
  "license": "ISC",
  "devDependencies": {
    "browserify": "^13.1.1",
    "clean-css": "^3.4.21",
    "grunt": "^1.0.1",
    "grunt-cli": "^1.2.0",
    "grunt-uncss": "^0.6.1",
    "ncp": "^2.0.0",
    "node-sass": "^3.13.0",
    "nodemon": "1.11.0",
    "uglifyjs": "^2.4.10",
    "uncss": "^0.14.1"
  },
  "dependencies": {
    "ejs": "^2.5.3",
    "express": "^4.14.0",
    "http2": "^3.3.6",
    "jquery": "^3.1.0",
    "normalize.css": "^5.0.0",
    "reload": "^1.1.0",
    "underscore": "^1.8.3"
  }
}
